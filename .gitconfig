[diff]
external    = vimdiff-git.sh

[pager]
diff        =

[user]
	email = daevanchen@gmail.com
	name = Evan Chen
[core]
	quotepath = false
	excludesfile = /Users/ykchen/.gitignore_global
	ignorecase = false

[alias]
    a       = add
    ad      = add
    cm      = commit
    cpk     = cherry-pick
    br      = branch
    co      = checkout
    dif     = diff
    l       = log
    ll      = log --name-status
    mt      = mergetool
    reb     = rebase
    rst     = reset
    st      = status
    stat    = status

[merge]
    tool    = nvim -d
    conflictstyle = diff3
